{% extends "layout.jinja" %}

{% block headers %}
    <link rel="stylesheet" href="/static/styles/resources/create.css">
{% endblock headers %}

{% block content %}
  <section id=blogs class=''>

  <div class=container>
    <form class="mt-5" id="create-form" action="" method="post" enctype="multipart/form-data">
      <p>
    Select multiple file when you click on "choose files" and then click on
    "submit". This will upload these pictures/files to my server.
      </p>
      <div class="form-group">
        <div class="row m-3">
            <label for="uploader">Name:</label>
            <input class="form-control" type="text" name="uploader" id="uploader"> <br>
        </div>
        <div class="row mt-3">
          <div class="col-3 custom-file">
          <input type="file" name="file[]" multiple="" class="custom-file-input" id='fileinput'>
          <input hidden type="file" name="file[]" multiple="" class="custom-file-input" id='fileinput'>
          </div>
        </div>
      </div>
      <button class="btn btn-lg btn-primary mt-4" id='submit-btn'>Submit</button>
    </form>
  </div>
  </section>
{% endblock content %}

{% block js %}
<script type='text/javascript' src="/static/js/picture-dropoff.js">
</script>
{% endblock js %}
