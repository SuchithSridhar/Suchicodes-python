{% extends "layout.jinja" %}

{% block content %}
  <div class="container">

    <table class="table">
    <thead>
        <tr>
        <th scope="col">Date</th>
        <th scope="col">IP</th>
        <th scope="col">URL</th>
        </tr>
    </thead>
    <tbody>
        {% for log in logs.items %}
            <tr>
            <td>{{log.date}}</td>
            <td>{{log.ip}}</td>
            <td>{{log.url}}</td>
            </tr>
        {% endfor %}
    </tbody>
    </table>

    <div class=pagination>
      {% for page in logs.iter_pages() %}
        {% if page %}
          {% if page != logs.page %}
            <a class="btn m-1 btn-primary" href="{{ url_for('admin.ip_logs', page=page) }}">{{ page }}</a>
          {% else %}
            <a class="btn m-1 btn-dark">{{ page }}</strong>
          {% endif %}
        {% else %}
          <span class=ellipsis>â€¦</span>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock content %}
